@inject IJSRuntime JsRuntime

<div class="header-container">
    <img class="logo" src="/images/shared/bit_logo.png" />
    <div class="sm-visible">
        <div id="btnShowMobileMenu" style="display: block">
            <svg width="18" height="12" viewBox="0 0 18 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M0.25 1C0.25 0.58579 0.58579 0.25 1 0.25H17C17.4142 0.25 17.75 0.58579 17.75 1C17.75 1.41421 17.4142 1.75 17 1.75H1C0.58579 1.75 0.25 1.41421 0.25 1ZM0.25 6C0.25 5.5858 0.58579 5.25 1 5.25H17C17.4142 5.25 17.75 5.5858 17.75 6C17.75 6.4142 17.4142 6.75 17 6.75H1C0.58579 6.75 0.25 6.4142 0.25 6ZM1 10.25C0.58579 10.25 0.25 10.5858 0.25 11C0.25 11.4142 0.58579 11.75 1 11.75H17C17.4142 11.75 17.75 11.4142 17.75 11C17.75 10.5858 17.4142 10.25 17 10.25H1Z" fill="black" />
            </svg>
        </div>
    </div>
    <div class="sm-hidden">
        <SiteHeaderLinks />
    </div>
</div>

<div id="mobileMenu" class="mobile-menu" style="display: none">

    <div class="mobile-menu-transparent-background"></div>

    <div class="mobile-menu-container">
        <div id="btnHideMobileMenu" class="close-menu-icon-wrapper">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M0.939342 0.939342C1.52513 0.353553 2.47487 0.353553 3.06066 0.939342L8 5.87868L12.9393 0.939342C13.5251 0.353553 14.4749 0.353553 15.0607 0.939342C15.6464 1.52513 15.6464 2.47487 15.0607 3.06066L10.1213 8L15.0607 12.9393C15.6464 13.5251 15.6464 14.4749 15.0607 15.0607C14.4749 15.6464 13.5251 15.6464 12.9393 15.0607L8 10.1213L3.06066 15.0607C2.47487 15.6464 1.52513 15.6464 0.939342 15.0607C0.353553 14.4749 0.353553 13.5251 0.939342 12.9393L5.87868 8L0.939342 3.06066C0.353553 2.47487 0.353553 1.52513 0.939342 0.939342Z" fill="black" />
            </svg>
        </div>

        <SiteHeaderLinks />
    </div>
</div>

@code {
    bool _isMobileMenuVisible = false;

    private async Task ShowMobileMenu()
    {
        _isMobileMenuVisible = true;
        await JsRuntime.InvokeVoidAsync("disableScroll");
    }

    private async Task HideMobileMenu()
    {
        _isMobileMenuVisible = false;
        await JsRuntime.InvokeVoidAsync("enableScroll");
    }


}